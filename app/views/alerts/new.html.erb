
<%=semantic_form_for @alert do |f|%>
<%=f.inputs do%>
<%=f.input :lugar%>
<%=f.input :content, :as => :text,:input_html => { :rows => 3 } %>
<%end%>
<%=f.buttons%>
<%end%>

<span class= "alerta">
<%=@twets[0].text%>
</span>

<%@alertas.each do |t|%>
<span class ="alerta">
<strong><%=t.lugar%>:</strong>
<%=t.content%> 
<br/>
<h6><%=link_to  "Ver Alerta", alert_path(t)%> created: <%=distance_of_time_in_words DateTime.now, t.created_at%> ago. <%=link_to "Comentar", new_alert_comment_path(t.id)%></h6>
</span>
<%end%>


