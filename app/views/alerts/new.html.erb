
<%=semantic_form_for @alert do |f|%>
<%=f.inputs do%>
<%=f.input :lugar%>
<%=f.input :content, :as => :text,:input_html => { :rows => 5 } %>
<%end%>
<%=f.buttons%>
<%end%>

<span class= "alerta">
<%=@twets[0].text%>
</span>

<%@alertas.each do |t|%>
<span class ="alerta">
<%=t.content%> created at: <%=distance_of_time_in_words DateTime.now, t.created_at%> ago

</span>
<br/>
<%end%>


