
<div class= "dias">
<%=semantic_form_for @alert do |f|%>
<%=f.inputs do%>
<p>
<h4><%=f.input :lugar, :label => "Ponle un titulo a tu duda!!"%></h4>
<h4><%=f.input :content, :as => :text,:input_html => { :rows => 3 }, :label => "Que es lo que no sabes???" %></h4></p>
<%end%>

<% f.buttons do %>
<h2><%= f.commit_button "Enviar Duda!!!" %></h2>
<% end %>

<%end%>

<br/>

<%= will_paginate @alertas%>

<%@alertas.each do |t|%>
<span class ="contenta">
<h2 class="star"><%=t.lugar%></h2>
<p><%=t.content%></p> 
<p><%=link_to  "Ver Duda!! ", alert_path(t)%> created: <%=distance_of_time_in_words DateTime.now, t.created_at%> ago. <%=link_to "Sabes la respuesta?? COMENTALO!!", new_alert_comment_path(t.id)%></p>
</span>
<br/>
<%end%>


</div>